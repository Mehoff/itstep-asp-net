@model List<Cart>


@if (Model.Any())
{
    <ul class="w-50">
        @foreach (var c in Model)
        {
            <li class="list-group-item">
                <div>
                    <a class="cart-item-name" asp-action="ProductPage" asp-controller="Products" asp-route-id="@c.ProductId"><b>@c.Product.Name</b></a>
                    <a  class="delete-button" asp-action="RemoveFromCart" asp-controller="Products" asp-route-id="@c.Id">Удалить</a>
                </div>
                
            </li>
        }
    </ul>

    
}
else
{
    <p>Корзина пуста</p>
}

<ul class="list-group-flush">
    <li class="list-group-item">
        <a asp-action="ClearCart" asp-controller="Products">Очистить корзину</a>
    </li>
    <li class="list-group-item">
        <a asp-action="Index" asp-controller="Home">Назад</a>
    </li>
</ul>


<style>
    .cart-item-name{
        color: black;
        font-size: 18px;
        text-decoration: none;
    }

    .delete-button{
        float: right;
    }
</style>


