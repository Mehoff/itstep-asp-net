@model Product
@*todo: add image placeholder*@


<div class="product">
    <img style="max-height: 300px; max-width: 200px" src="@Model.ImageUri" />
    <h1 class="product-name">@Model.Name</h1>

    <div>
        <a class="category-name" asp-route-categoryid="@Model.CategoryId" asp-action="Products" asp-controller="Products">@Model.Category.Name</a>
    </div>

   
    <ul class="list-group">
        <li class="list-group-item">
            <a asp-controller="Products" asp-action="AddToCart" asp-route-id="@Model.Id">Добавить в корзину</a>
        </li>

        @if (User.IsInRole("admin"))
        {
         <li class="list-group-item">
            <a asp-controller="Admin" asp-action="EditProduct" asp-route-id="@Model.Id">Редактировать</a>
         </li>
        }
    </ul>

</div>



<style>
    .category-name{
        color: black;
        text-decoration: none;
        font-size: 18px;
    }

    .product-name {
        color: black;
        text-decoration: none;
        font-size: 24px;
    }
</style>