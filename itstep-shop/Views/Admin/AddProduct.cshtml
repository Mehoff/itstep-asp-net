@model itstep_shop.ViewModels.AddProductViewModel

@{
    ViewData["Title"] = "Добавление продукта";
}

<h1>Добавление продукта</h1>

<form asp-action="AddProduct">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="form-group">
        <label asp-for="Name" class="control-label">Имя</label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="CategoryId" class="control-label">Категория</label>
        <select asp-for="CategoryId">
            @foreach(var category in (ViewData["Categories"] as List<Category>))
            {
                <option value="@category.Id">@category.Name</option>
            } 
        </select>
    </div>
    <div class="form-group">
        <label asp-for="ImageUri" class="control-label">Ссылка на картинку</label>
        <input asp-for="ImageUri" class="form-control" />
        <span asp-validation-for="ImageUri" class="text-danger"></span>
    </div>

    <div class="form-group">
        <input type="submit" value="Добавить" class="btn btn-primary" />
    </div>
</form>
